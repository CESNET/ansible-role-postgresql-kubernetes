apiVersion: postgresql.cnpg.io/v1
kind: ScheduledBackup
metadata:
  name: "{{ cnpg_cluster_name }}-scheduled-backup"
  namespace: "{{ k8s_namespace }}"
  annotations:
    field.cattle.io/description: "regular database full backup"
spec:
  schedule: "{{ cnpg_cluster_full_backup_schedule }}"
  immediate: true
  backupOwnerReference: self
  cluster:
    name: "{{ cnpg_cluster_name }}"
  method: plugin
  pluginConfiguration:
    name: barman-cloud.cloudnative-pg.io
